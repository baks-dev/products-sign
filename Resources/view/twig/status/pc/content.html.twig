{% trans_default_domain 'products-sign.status' %}



{#
-- Заказ --
new: 'Новые'
process: 'В резерве'
done: 'Выполнен'
error: 'Ошибка'
cancel: 'Отменен'

-- Поставка --
supply: 'Поставка'
undefined: 'Не определен'
#}



{% if status == 'new' %}
    <h6 class="lh-normal m-0">
		<span class="badge bg-primary shadow">
			{{ status|trans }}
		</span>
    </h6>

{% elseif status == 'decommission' %}
    <h6 class="lh-normal m-0">
		<span class="badge bg-light shadow text-dark">
			{{ status|trans }}
		</span>
    </h6>

{% elseif status == 'process' %}
    <h6 class="lh-normal m-0">
		<span class="badge bg-secondary shadow">
			{{ status|trans }}
		</span>
    </h6>


{% elseif status == 'done' %}
    <h6 class="lh-normal m-0">
		<span class="badge bg-success shadow">
			{{ status|trans }}
		</span>
    </h6>

{% elseif status == 'cancel' or status == 'error' %}
    <h6 class="lh-normal m-0">
		<span class="badge bg-danger shadow">
			{{ status|trans }}
        </span>
    </h6>

{% elseif status == 'supply' %}
    <h6 class="lh-normal m-0">
		<span class="badge text-white bg-info shadow">
			{{ status|trans }}
		</span>
    </h6>

{% elseif status == 'undefined' %}
    <h6 class="lh-normal m-0">
		<span class="badge text-bg-secondary shadow">
			{{ status|trans }}
		</span>
    </h6>

{% else %}

    <h6 class="lh-normal m-0">
        <span class="badge bg-info shadow">
            {{ status|trans }}
        </span>
    </h6>

{% endif %}


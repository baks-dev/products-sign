{% trans_default_domain('products-sign.admin') %}

<div class="modal-dialog modal-dialog-centered " style="max-width: 800px;">
    {{ form_start(form) }}


    <div class="modal-content p-3 border-bottom border-5 border-primary">

        <div class="modal-header">
            <h5 class="modal-title">
                {{ 'Редактировать группу честных знаков'|trans }}
            </h5>
        </div>

        <div class="modal-body">
            {# {{  include('@manufacture-part/admin/newedit/_form/'~baks_settings.device~'/form.html.twig') }} #}

            {{ form_row(form.number, {
                label: 'Номер грузовой таможенной декларации (ГТД)'
            }) }}
        </div>

        <div class="modal-footer ">
            {# {{ form_widget(form.comment, { attr: { placeholder : 'Комментарий'} }) }} #}

            <div class="mt-3 gap-3 d-flex">
                {# Отмена #}
                <button type="button" class="btn btn-light" data-bs-dismiss="modal">
                    {{ 'btn.cancel'|trans({}, 'core.btn') }}
                </button>

                {# Сохранить #}
                {{ form_widget(form.product_sign, { label: '
                    <span>'~ 'btn.update'|trans({}, 'core.btn') ~'</span>
                    <span class="spinner-border spinner-border-sm vertical-middle d-none"></span>
			    '}) }}
            </div>
        </div>

    </div>

    {{ form_end(form) }}
</div>


